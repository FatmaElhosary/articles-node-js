<%- include('./header.ejs') %>
<div class="container my-5">
  <div class="row">
    <div class="col-md-4">
      <div class="card p-2 my-2 rounded" style="width: 18rem;">
        <div class="card-body">
          <img src="<%= articles.imgURL %>" alt="card"  class="w-100"/>
          <h5 class="card-title"><%= articles.title %></h5>
          <p class="card-text">
            <%= articles.description %>
          </p>
          <% if (admin) { %>
          <div class="d-flex">
            <a href="/editarticle/<%= articles._id %>" class="btn btn-info"
              >Edit</a
            >
            <a
              href="/deletearticle/<%= articles._id %>"
              class="btn btn-danger"
              >Delete</a
            >
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./footer.ejs') %>
