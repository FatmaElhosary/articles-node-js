<%- include('./header.ejs') %>

<div class="container mt-5 pt-3">
  <div class="row">
    <div class="col-md-8 m-auto">
      <form action="/addarticle" method="POST" enctype="multipart/form-data">
        <input
          type="text"
          name="title"
          class="form-control"
          placeholder="Title"
        />
        <input type="file" name="cardimg" class="form-control my-4" accept="image/*" />
        <textarea
          type="text"
          rows="6"
          name="description"
          class="form-control mt-3"
          placeholder="Description"
        ></textarea>
        <button type="submit" class="btn btn-info w-100 mt-3">Add</button>
      </form>
    </div>
  </div>
</div>

