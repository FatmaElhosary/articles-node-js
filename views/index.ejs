<%- include('./header.ejs') %>
<%- include('./search-article') %> 
 

<div class="container my-5">
  <div class="row">
    <% for( let index = 0; index < articles.length; index++ ) { %>
    
  
    <div class="col-md-4">
      <div class="card p-2  my-2 rounded" style="width: 18rem;">
        <div class="card-body">
          <img src="<%= articles[index].imgURL %> " alt="card"  class="w-75">
          <h5 class="card-title"> <%= articles[index].title %>  </h5>
          <p class="card-text">
            <%= articles[index].description %> 
          </p>
          <a href="/article/<%= articles[index]._id %> " class="btn btn-info">Read More...</a>
<% if (admin) { %>
  <div class="py-2">
    <a href="/editarticle/<%= articles[index]._id %>" class="btn btn-info">Edit</a>
    <a href="/deletearticle/<%= articles[index]._id %>" class="btn btn-danger">Delete</a>
   </div>
<% } %>
     
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<%- include('./footer.ejs') %>
